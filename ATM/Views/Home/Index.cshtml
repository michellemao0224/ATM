@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Australia and New Zealand Banking Group Limited</h1>
    <p class="lead">ANZ Bank offers the first-ever web-based ATM. Give it a try today!</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Powered by ASP .NET</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Register</h2>
        <p>
           Open an account with us
        </p>
        <p>@Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-default"})</p>
    </div>
    <div class="col-md-4">
        <h2>Log in</h2>
        <p>Access your exsiting account</p>
        <p>@Html.ActionLink("Log in", "Login", "Account", null, new { @class = "btn btn-default" })</p>
    </div>
</div>

